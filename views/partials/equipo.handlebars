<div class="card mb-4" style="max-width: 800px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{equipo.crestUrl}}" class="card-img" alt="logo del equipo">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{equipo.name}}</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Pais: {{equipo.area.name}}</li>
            <li class="list-group-item">Direccion: {{equipo.address}}</li>
            <li class="list-group-item">Email: {{equipo.email}}</li>
            <li class="list-group-item">Sitio Web: {{equipo.website}}</li>
            <li class="list-group-item">Telefono: {{equipo.phone}}</li>
        </ul>
      </div>
    </div>
  </div>
</div>
<a type="button" class="btn btn-dark" href="/">Home</a>